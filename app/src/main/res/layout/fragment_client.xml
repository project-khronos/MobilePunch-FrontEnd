<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/fragment_client"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ClientFragment">

  <EditText
    android:id="@+id/client_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="@string/client_name"
    app:layout_constraintTop_toTopOf="parent"/>

  <EditText
    android:id="@+id/client_company"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Client's company"
    android:inputType="text"
    app:layout_constraintTop_toBottomOf="@id/client_name"/>

  <EditText
    android:id="@+id/client_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Client's number"
    android:inputType="phone"
    app:layout_constraintTop_toBottomOf="@id/client_company"/>

  <CheckBox
    android:id="@+id/alt_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/client_number"
    app:layout_constraintTop_toTopOf="@id/client_number"
    app:layout_constraintBottom_toBottomOf="@id/client_number"
    android:hint="Client's number"/>

  <EditText
    android:id="@+id/alternate_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Alternate number"
    android:visibility="invisible"
    app:layout_constraintTop_toBottomOf="@id/client_number"/>

  <EditText
    android:id="@+id/client_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/client_number"
    android:hint="Client's email"/>
</android.support.constraint.ConstraintLayout>