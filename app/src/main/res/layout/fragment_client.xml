<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:id="@+id/fragment_client"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ClientFragment"
  android:background="@color/rallyBackground"
  android:padding="20dp">

  <EditText
    android:id="@+id/client_name"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="@string/client_name"
    android:textColor="@color/rallyGreen"
    android:textColorHint="@color/rallyBlue"/>

  <EditText
    android:id="@+id/client_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Client's number"
    android:inputType="phone"
    android:textColor="@color/rallyGreen"
    android:textColorHint="@color/rallyBlue"/>

  <EditText
    android:id="@+id/alternate_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Alternate number"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/client_number"
    android:textColor="@color/rallyGreen"
    android:textColorHint="@color/rallyBlue"/>

  <EditText
    android:id="@+id/client_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="@string/address"
    android:textColor="@color/rallyGreen"
    android:textColorHint="@color/rallyBlue"/>


  <EditText
    android:id="@+id/client_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/client_number"
    android:hint="Client's email"
    android:textColor="@color/rallyGreen"
    android:textColorHint="@color/rallyBlue"/>

</LinearLayout>