<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_marginBottom="2dp"
  android:translationZ="8dp"
  app:cardCornerRadius="10dp"
  app:cardElevation="8dp"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <TextView
      android:id="@+id/li_equipment_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/equipment_name"
      android:textColor="@color/rallyBlue"/>
    <TextView
      android:id="@+id/li_equipment_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/identification"
      android:textColor="@color/rallyBlue"/>
    <TextView
      android:id="@+id/li_equipment_make"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/make"
      android:textColor="@color/rallyBlue"/>
    <TextView
      android:id="@+id/li_equipment_model"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/model"
      android:textColor="@color/rallyBlue"/>
    <TextView
      android:id="@+id/li_equipment_year"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/year"
      android:textColor="@color/rallyBlue"/>
    <TextView
      android:id="@+id/li_equipment_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/description"
      android:textColor="@color/rallyBlue"/>


  </LinearLayout>

</android.support.v7.widget.CardView>