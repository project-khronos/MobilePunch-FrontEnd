<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginBottom="@dimen/nav_bottom_height"
  android:padding="20dp"
  android:background="@color/rallyBackground"
  android:orientation="vertical"
  android:visibility="visible"
  tools:context=".view.BottomNav">

  <edu.cnm.deepdive.mobilepunch.view.custom_widgets.BasicEditText
    android:id="@+id/project_description"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:hint="Description"
    android:cursorVisible="true"
    android:textAlignment="inherit"
    android:textCursorDrawable="@null"
    android:inputType="textMultiLine"/>

  <edu.cnm.deepdive.mobilepunch.view.custom_widgets.BasicEditText
    android:id="@+id/project_name"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="2dp"
    android:hint="Project Name"/>


  <Button
    android:id="@+id/project_start_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/edit_text_style"
    android:text="Start date"
    android:textColor="@color/rallyBlue"/>

  <Button
    android:id="@+id/project_expected_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/edit_text_style"
    android:text="@string/expected_end_date"
    android:textColor="@color/rallyBlue"/>

  <Button
    android:id="@+id/project_end_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/edit_text_style"
    android:text="End date"
    android:textColor="@color/rallyBlue"/>


  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
      android:id="@+id/project_save"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/rallyGreen"
      android:text="SAVE"
      app:layout_constraintBottom_toBottomOf="parent"/>

  </android.support.constraint.ConstraintLayout>


</LinearLayout>